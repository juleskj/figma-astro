---
const { heroImg, tag_text, hero_text } = Astro.props;
---

<div id="hero_img" class="full-bleed">
  <div class="text_on_img">
    <p class="tag">{tag_text}</p>
    <h1>{hero_text}</h1>
  </div>
</div>

<style>
  #hero_img {
    background-image: url(/public/images/services_boost.png);
  }
  .text_on_img {
    padding: 48px 60px;
    margin: 8rem 0;
    border-radius: var(--small-border-radius);
    background-color: var(--gray-color);
    backdrop-filter: blur(5.5px);
    opacity: 0.85;
    text-transform: capitalize;
    display: flex;
    flex-flow: wrap column;
    width: fit-content;
    gap: 1rem;
  }

  .tag {
    padding-block: 0.25em;
    padding-inline: 1em;
    display: inline block;
    background: var(--yellow-color);
    font-size: 0.8em;
    font-weight: 700;
    letter-spacing: 0.5px;
    border-radius: var(--border-radius);
    text-transform: uppercase;
    width: fit-content;
  }
</style>
