---
const { btn_type, btn_value, form_id, btn_text, btn_color, btn_padding } = Astro.props;
---

<button  type={btn_type} form={form_id} value={btn_value}
  >{btn_text}</button>

<style>
   button {
    --btn-color: color-mix(in oklab, var(--yellow-color), var(--mix-with, 0% #fff));
    background-color: var(--btn-color);
    
    padding:var(--big-padding);
    border-radius: var(--border-radius);
    &:hover {
      --mix-with: 30% #fff;
    }
    &:active {
      --mix-with: 20% #000;
    }
  }


  
</style>
