---
const { btn_type, btn_value, form_id, btn_text, size, variant } = Astro.props;
---

<button
  class={size + " " + variant}
  type={btn_type}
  form={form_id}
  value={btn_value}>{btn_text}</button
>

<style>
  button {
    height: fit-content;
    width: fit-content;
    display: flex;
    white-space: nowrap;
    justify-content: center;
    text-transform: capitalize;
  }

  .big_btn {
    padding: var(--big-padding);
  }

  .small_btn {
    padding: var(--small-padding);
  }

  .white_btn {
    --btn-color: color-mix(
      in oklab,
      var(--white-color),
      var(--mix-with, 0% #fff)
    );
    background-color: var(--btn-color);
    border-radius: var(--border-radius);
    &:hover {
      --mix-with: 30% #000;
    }
    &:active {
      --mix-with: 20% #000;
    }
  }

  .yellow_btn {
    --btn-color: color-mix(
      in oklab,
      var(--yellow-color),
      var(--mix-with, 0% #fff)
    );
    background-color: var(--btn-color);
    border-radius: var(--border-radius);
    &:hover {
      --mix-with: 30% #fff;
    }
    &:active {
      --mix-with: 20% #000;
    }
  }

  @media (width < 500px) {
    button {
      flex: 1 1 20px;
    }
  }
</style>
