---
const {
  btn_type,
  btn_value,
  form_id,
  btn_text,
  size,
  variant,
  popover_target,
} = Astro.props;
---

<button
  popovertarget={popover_target}
  class={size + " " + variant}
  type={btn_type}
  form={form_id}
  value={btn_value}>{btn_text}</button
>

<style>
  button {
    height: fit-content;
    width: fit-content;
    display: flex;
    white-space: nowrap;
    justify-content: center;
    text-transform: capitalize;
  }

  /************ diffrent size buttons ************/
  .big_btn {
    padding: var(--big-padding);
  }

  .small_btn {
    padding: var(--small-padding);
  }
  /************ diffrent variant buttons ************/
  .white_btn {
    --btn-color: color-mix(
      in oklab,
      var(--white-color),
      var(--mix-with, 0% #fff)
    );
    background-color: var(--btn-color);
    border-radius: var(--border-radius);
    &:hover {
      --mix-with: 100% #000;
      outline: var(--white-color) solid 1px;
      color: var(--white-color);
    }
    &:active {
      --mix-with: 20% #000;
    }
  }

  .black_btn {
    --btn-color: color-mix(
      in oklab,
      var(--black-color),
      var(--mix-with, 0% #fff)
    );
    background-color: var(--btn-color);
    border-radius: var(--border-radius);
    color: var(--white-color);
    &:hover {
      --mix-with: 100% #fff;
      outline: 3px solid var(--black-color);
      color: var(--black-color);
    }
    &:active {
      --mix-with: 20% #fff;
    }
  }

  .yellow_btn {
    --btn-color: color-mix(
      in oklab,
      var(--yellow-color),
      var(--mix-with, 0% #fff)
    );
    background-color: var(--btn-color);
    border-radius: var(--border-radius);
    &:hover {
      --mix-with: 100% #fff;
      outline: 3px solid var(--yellow-color);
      color: var(--black-color);
    }
    &:active {
      --mix-with: 20% #000;
    }
  }

  @media (width < 500px) {
    button {
      flex: 1 1 20px;
    }
  }
</style>
