---
import Layout from "../components/Layout.astro";
import ButtonA from "../components/ButtonA.astro";

import Button from "../components/Button.astro";
import Image_w_List from "../components/Image_w_List.astro";
import FourDiv from "../components/FourDiv.astro";
import ScrollingElement from "../components/ScrollingElement.astro";
import SinglePieChart from "../components/SinglePieChart.astro";
import Pie_w_text from "../components/Pie_w_text.astro";
import ForsideHero from "../components/ForsideHero.astro";

import DynamiskCard from "../components/DynamiskCard.astro";

const teamData = await fetch(
  "https://raw.githubusercontent.com/juleskj/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());
---

<Layout title="Forside">
  <ForsideHero />
  <DynamiskCard />

  <Image_w_List
    position_green="left_top_green"
    position_dots="left_top_dots"
    list_header="what to expect"
    list_tag="we'll work with you"
    list_p="Lorem ipsum dolhor sit amet consectetur adipisicing elit. Officia eos, maiores autem qui animi sequi aut dolores et dicta voluptates laboriosam doloribus voluptas nisi velit porro sunt odio molestiae iusto!"
  >
    <img
      class="img_border"
      src="/images/work_with_us.png"
      alt="picture of people working together"
      slot="img_slot"
    />

    <li slot="list_container" class="tick">
      <p>
        Bring to the table win-win survival strategies to ensure proactive
        domination. At the end of the day.
      </p>
    </li>
    <li slot="list_container" class="tick">
      <p>
        apitalize on low hanging fruit to identify a ballpark value added
        activity to beta test override the digital
      </p>
    </li>
  </Image_w_List>

  <ScrollingElement />

  <Pie_w_text
    pie_tag="experience"
    pie_header_text="More than 25 years of experience"
    pie_under_header="3000+ our clients are insured around the World"
  >
    <SinglePieChart percent="85%" pie_header="consisenty" slot="pie_slot" />
    <SinglePieChart percent="95%" pie_header="improvement" slot="pie_slot" />
    <SinglePieChart percent="90%" pie_header="branching" slot="pie_slot" />
  </Pie_w_text>

  <FourDiv bg_color="black_bg">
    <ButtonA
      slot="btn_slot"
      link="/team"
      size="big_anchor"
      variant="white_anchor"
      a_text="get in touch"
    />
  </FourDiv>

  <Image_w_List
    position_green="left_bottom_green"
    position_dots="right_top_dots"
    list_header="contact us. it's easy."
    list_tag="process"
    grid_container="grid_img-container"
    flex_row="flex_row-reverse"
    list_p="Lorem ipsum dolhor sit amet consectetur adipisicing elit. Officia eos, maiores autem qui animi sequi aut dolores et dicta voluptates laboriosam doloribus voluptas nisi velit porro sunt odio molestiae iusto!"
  >
    <img
      class="img_border span-2"
      src="/images/process2.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <img
      class="img_border"
      src="/images/process3.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <img
      class="img_border"
      src="/images/process1.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <li slot="list_container" class="contact call">
      <div class="info">
        <p>call today</p>
        <h6>+1 800 100 900</h6>
      </div>
    </li>
    <li slot="list_container" class="contact time">
      <div class="info">
        <p>monday til friday</p>
        <h6>9AM - 5PM</h6>
      </div>
    </li>
    <li slot="list_container" class="contact location">
      <div class="info">
        <p>USA office</p>
        <h6>195 Devonshire St Boston, MA 02110</h6>
      </div>
    </li>
  </Image_w_List>
</Layout>

<style>
  .span-2 {
    grid-row: 1 / span 2;
  }
  li {
    list-style-type: none;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    text-transform: capitalize;
  }
  .call:before {
    content: url(/images/call.svg);
    display: inline-block;
  }

  .location:before {
    content: url(/images/location.svg);
    display: inline-block;
  }
  .time:before {
    content: url(/images/time.svg);
    display: inline-block;
  }
</style>
