---
import Layout from "../components/Layout.astro";
import Button from "../components/Button.astro";
import Image_with_list from "../components/Image_with_list.astro";
import Four_div from "../components/Four_div.astro";
import ScrollingElement from "../components/ScrollingElement.astro";
import Pie_chart from "../components/Pie_chart.astro";
import Pie_w_text from "../components/Pie_w_text.astro";
---

<Layout title="Forside">
  <div popover id="popup">
    <form action="/" id="login">
      <h4>Dashboard login</h4>
      <input type="email" placeholder="Enter Email" />
      <input type="password" placeholder="Enter Password" />
      <Button
        size="small_btn"
        variant="yellow_btn"
        btn_type="submit"
        form_id="login"
        value="submit"
        btn_text="go to dashboard"
      />
    </form>
  </div>

  <Image_with_list
    position_green="left_top_green"
    position_dots="left_top_dots"
    list_header="what to expect"
    list_tag="we'll work with you"
  >
    <img
      class="img_border"
      src="/images/work_with_us.png"
      alt="picture of people working together"
      slot="img_slot"
    />

    <li slot="list_container" class="tick">
      Bring to the table win-win survival strategies to ensure proactive
      domination. At the end of the day.
    </li>
    <li slot="list_container" class="tick">
      apitalize on low hanging fruit to identify a ballpark value added activity
      to beta test override the digital
    </li>
  </Image_with_list>

  <ScrollingElement />

  <Pie_w_text
    pie_tag="experience"
    pie_header_text="More than 25 years of experience"
    pie_under_header="3000+ our clients are insured around the World"
  >
    <Pie_chart percent="85%" pie_header="consisenty" slot="pie_slot" />
    <Pie_chart percent="95%" pie_header="improvement" slot="pie_slot" />
    <Pie_chart percent="90%" pie_header="branching" slot="pie_slot" />
  </Pie_w_text>

  <Four_div bg_color="black_bg">
    <Button
      btn_text="get in touch"
      size="big_btn"
      variant="white_btn"
      slot="btn_slot"
    />
  </Four_div>

  <Image_with_list
    position_green="left_bottom_green"
    position_dots="right_top_dots"
    list_header="contact us. it's easy."
    list_tag="process"
    grid_container="grid_img-container"
    flex_row="flex_row-reverse"
  >
    <img
      class="img_border span-2"
      src="/images/process2.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <img
      class="img_border"
      src="/images/process3.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <img
      class="img_border"
      src="/images/process1.png"
      alt="picture of people working together"
      slot="img_slot"
    />
    <li slot="list_container" class="contact call">
      <div class="info">
        <p>call today</p>
        <h6>+1 800 100 900</h6>
      </div>
    </li>
    <li slot="list_container" class="contact time">
      <div class="info">
        <p>monday til friday</p>
        <h6>9AM - 5PM</h6>
      </div>
    </li>
    <li slot="list_container" class="contact location">
      <div class="info">
        <p>USA office</p>
        <h6>195 Devonshire St Boston, MA 02110</h6>
      </div>
    </li>
  </Image_with_list>
</Layout>

<style>
  #popup::backdrop {
    background: #0004;
    backdrop-filter: blur(4px);
  }
  :popover-open {
    margin: auto auto;
    background-color: var(--black-color);
    border-radius: var(--small-border-radius);
    padding: var(--big-bottom-padding);
    & h4 {
      text-align: center;
      color: var(--white-color);
    }
  }

  form {
    display: flex;
    flex-flow: wrap column;
    align-items: center;
    gap: 1rem;
    & input {
      background-color: var(--gray-color);
      border-radius: var(--border-radius);
      padding: var(--small-padding);
    }
  }
  /**
*
*
*
*
*
*
*
*
*
*
*
*
* */

  .span-2 {
    grid-row: 1 / span 2;
  }

  li {
    list-style-type: none;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    text-transform: capitalize;
  }
  .call:before {
    content: url(/images/call.svg);
    display: inline-block;
  }

  .location:before {
    content: url(/images/location.svg);
    display: inline-block;
  }
  .time:before {
    content: url(/images/time.svg);
    display: inline-block;
  }
</style>
